################################################################################
SRC = $(shell find . -name '*.md' -type f)
PANDOC_OPTS = -Ss

################################################################################
.PHONEY: all clean

################################################################################
all: $(SRC:.md=.html)

################################################################################
clean:
	rm -f $(SRC:.md=.html)

################################################################################
%.html: %.md
	pandoc $(PANDOC_OPTS) -f markdown -t html5 -o $@ $<
